
<% if flash[:notice] %>
 <p class="notice"><%= flash[:notice] %></p>
<% end %>

<table>
 <thead>
  <tr>
   <th>ID</th>
   <th>タイトル</th>
   <th>開始日</th>
   <th>終了日</th>
   <th>終日かどうか</th>
   <th>スケジュール更新日時</th>
   <th>メモ</th>
   <th>参照</th>
   <th>編集</th>
   <th>削除</th>
  </tr>
 </thead>

 <tbody>
  <% @tasks.each do |t| %>
   <tr>
    <td><%= t.id %></td>
    <td><%= t.title %></td>
    <td><%= t.created_at.to_s(:datetime_jp) %></td>
    <td><%= t.finished_day.to_s(:datetime_jp) %></td>
    <td><%= t.is_all_day %></td>
    <td><%= t.updated_at.to_s(:datetime_jp) %></td>
    <td><%= t.memo %></td>

    <td>
     <%= link_to"参照",task_path(@task.id) %>
    </td>
    <td>
     <%= link_to"編集",edit_task_path(@task) %>
    </td>
    <td>
     <%= link_to"削除",task_path(@task), method: :delete, {confirm: "本当に削除しますか？"} %>
    </td>
   </tr>
  <% end %>
 </body>
</table>

<p><%= link_to "スケジュール新規登録",new_task_path %></p>